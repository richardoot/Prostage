{% extends 'base.html.twig' %}

{% block title %} Prostage - Ajout Stage{% endblock %}

{% block body %}

  <div class="row">
    <div class="col-10 offset-1">
      <div class="card mb-3">
        <h3 style="text-align: center;"> Formulaire d'ajout de Stage </h3>
        <div class="card-body" style="background: black;">
           <h4>Veuillez saisir les données</h4>
           {{form_start(formulaire)}}
              {{form_row(formulaire.titre,{'attr': {'placeholder': 'Développeur'}})}}
              {{form_row(formulaire.sousTitre,{'attr': {'placeholder': 'Nom de l\'entreprise'}})}}
              {{form_row(formulaire.descriptionCourte,{'attr': {'placeholder': 'Stage de Développeur dans mon entreprise'}})}}
              {{form_row(formulaire.descriptionLongue,{'attr': {'placeholder': 'Ajouter votre description'}})}}
              {{form_row(formulaire.email,{'attr': {'placeholder': 'entreprise@domaine.com'}})}}
              {{form_row(formulaire.formations,{'label': 'Formations attendues:'})}}
              <button type="submit" class="btn btn-success"> Valider </button>
           {{form_end(formulaire)}}
        </div>
      </div>
    </div>
  </div>

{% endblock %}
